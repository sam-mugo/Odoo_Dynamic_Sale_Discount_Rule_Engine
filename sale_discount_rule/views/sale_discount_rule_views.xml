<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_discount_rule_list" model="ir.ui.view">
        <field name="name">sale.discount.rule.list</field>
        <field name="model">sale.discount.rule</field>
        <field name="arch" type="xml">
            <list string="Discount Rules">
                <field name="name"/>
                <field name="min_amount"/>
                <field name="max_amount"/>
                <field name="discount_percent"/>
                <field name="customer_group_id"/>
                <field name="valid_from"/>
                <field name="valid_to"/>
                <field name="active"/>
            </list>
        </field>
    </record>


    <record id="view_sale_discount_rule_form" model="ir.ui.view">
        <field name="name">sale.discount.rule.form</field>
        <field name="model">sale.discount.rule</field>
        <field name="arch" type="xml">
            <form string="Discount Rule">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="company_id"/>
                    </group>
                    <group>
                        <field name="min_amount"/>
                        <field name="max_amount"/>
                        <field name="discount_percent"/>
                        <field name="customer_group_id"/>
                    </group>
                    <group>
                        <field name="valid_from"/>
                        <field name="valid_to"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_sale_discount_rule" model="ir.actions.act_window">
        <field name="name">Discount Rules</field>
        <field name="res_model">sale.discount.rule</field>
        <field name="view_mode">list,form</field>
        <field name="help">Manage dynamic sales discount rules.</field>
    </record>


    <!-- Menu for Sales Managers under Sales -->
    <menuitem id="menu_sale_discount_rules" name="Discount Rules" parent="sale.sale_menu_root" action="action_sale_discount_rule" sequence="60"/>
</odoo>